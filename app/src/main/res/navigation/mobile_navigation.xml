<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_maps">

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.example.maps.ui.home.MapFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_navigation_maps_to_navigation_wiki2"
            app:destination="@id/navigation_wiki" />
        <action
            android:id="@+id/action_navigation_maps_to_navigation_settings2"
            app:destination="@id/navigation_settings" />
    </fragment>

    <fragment
        android:id="@+id/navigation_wiki"
        android:name="com.example.maps.ui.dashboard.WikiFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_wiki" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.maps.ui.notifications.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_navigation_wiki2"
            app:destination="@id/navigation_wiki" />
    </fragment>
</navigation>