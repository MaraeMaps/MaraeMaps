<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maps" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/marae_red</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:textColorPrimary">@color/marae_red</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lawn_green</item>
        <item name="colorSecondaryVariant">@color/tree_green    </item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="fontFamily">@font/dm_sans</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Maps.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Maps.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Maps.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>